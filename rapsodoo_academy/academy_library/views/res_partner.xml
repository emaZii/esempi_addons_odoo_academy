<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="module_name_view_partner_tree" model="ir.ui.view">
        <field name="name">module.name.view.partner.tree</field>
        <field name="model">res.partner</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="res_book_count"/>
                <field name="total_copies_sold"/>
            </tree>
        </field>
    </record>

    <record id="module_name_view_partner_form" model="ir.ui.view">
        <field name="name">module_name.view_name</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='vat']" position="after">
                <field name="is_author"/>
            </xpath>

            <xpath expr="//page[@name='internal_notes']" position="after">
                <page name="books" string="Books">
                    <field name="res_book_ids"/>
                </page>
            </xpath>

        </field>
    </record>

    <record id="res_partner_author_action_view" model="ir.actions.act_window">
        <field name="name">Author</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('is_author', '=', True)]</field>
        <field name="context">{'default_is_author': True}</field>
        <field name="view_ids" eval="[(5, 0, 0),
            (0, 0, {'view_mode': 'tree', 'view_id': ref('module_name_view_partner_tree')}),
            (0, 0, {'view_mode': 'form', 'view_id': ref('base.view_partner_form')})]"/>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Create your first library
            </p>
        </field>
    </record>

</odoo>
